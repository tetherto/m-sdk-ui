{
  "name": "@mining-sdk/foundation",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Complete foundation with features, state management, API client, hooks, and utilities",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./domain": {
      "types": "./src/components/domain/index.ts",
      "default": "./src/components/domain/index.ts"
    },
    "./feature": {
      "types": "./src/components/feature/index.ts",
      "default": "./src/components/feature/index.ts"
    },
    "./hooks": {
      "types": "./src/hooks/index.ts",
      "default": "./src/hooks/index.ts"
    },
    "./api": {
      "types": "./src/api/index.ts",
      "default": "./src/api/index.ts"
    },
    "./state": {
      "types": "./src/state/index.ts",
      "default": "./src/state/index.ts"
    },
    "./test-utils": {
      "types": "./src/test-utils/index.ts",
      "default": "./src/test-utils/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist node_modules .turbo",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "test": "vitest run --config vitest.config.js --maxConcurrency=5",
    "test:watch": "vitest --watch",
    "lint:fix": "eslint . --fix",
    "format": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^2.0.0",
    "@testing-library/react": "^16.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-redux": "^9.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@mining-sdk/core": "workspace:*"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitest/ui": "catalog:",
    "jsdom": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-redux": "catalog:",
    "vitest": "catalog:"
  }
}
