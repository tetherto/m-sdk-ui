{
  "name": "@mdk/theme",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "Theming system with design tokens and CSS variables",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./styles.css": "./dist/styles.css",
    "./themes/*": "./src/themes/*.css"
  },
  "scripts": {
    "build": "pnpm build:ts && pnpm build:scss",
    "build:scss": "vite build",
    "build:ts": "tsc",
    "clean": "rimraf dist node_modules .turbo",
    "dev": "concurrently -n ts,scss -c cyan,magenta \"pnpm dev:ts\" \"pnpm dev:scss\"",
    "dev:scss": "vite build --watch",
    "dev:ts": "tsc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "watch": "pnpm dev",
    "watch:scss": "pnpm dev:scss",
    "watch:ts": "pnpm dev:ts"
  },
  "dependencies": {
    "@mdk/core": "workspace:*"
  }
}
