{
  "name": "mining-sdk",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.5.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "build:verbose": "turbo build --output-logs=full",
    "build:demo": "turbo build --filter=@mining-sdk/demo",
    "build:scss": "turbo build:scss",
    "build:ts": "turbo build:ts",
    "check": "turbo check",
    "clean": "turbo clean && rimraf node_modules",
    "dev": "turbo dev",
    "dev:demo": "turbo dev --filter=@mining-sdk/demo",
    "dev:packages": "turbo dev --filter=!@mining-sdk/demo",
    "format": "turbo format",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "prepare": "husky",
    "fullcheck": "pnpm lint && pnpm typecheck && pnpm format && pnpm build",
    "preview:demo": "turbo preview --filter=@mining-sdk/demo",
    "typecheck": "turbo typecheck",
    "watch": "turbo watch",
    "watch:scss": "turbo watch:scss",
    "watch:ts": "turbo watch:ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.97.3",
    "turbo": "^2.8.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
