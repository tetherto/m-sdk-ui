{
  "name": "mdk-ui",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.5.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "eslint --cache --cache-location .eslintcache --debug --max-warnings 0",
    "lint:fix": "eslint --fix --cache --cache-location .eslintcache --max-warnings 0",
    "typecheck": "turbo typecheck",
    "format": "prettier --write .",
    "check": "turbo check",
    "clean": "turbo clean && rimraf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@eslint-react/eslint-plugin": "^2.9.0",
    "@stylistic/eslint-plugin": "^5.7.1",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "eslint-plugin-lodash": "^8.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.2.3",
    "eslint-plugin-testing-library": "^7.15.4",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "turbo": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
